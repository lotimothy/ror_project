<form class="" method="get" action="/events/index">
  <div class="row">
    <button class="waves-effect waves-light btn #0d47a1 red darken-4" type="submit">Nevermind, go back
    </button>
  </div>
</form>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p><%= error %></p>
    <% end %>
<% end %>